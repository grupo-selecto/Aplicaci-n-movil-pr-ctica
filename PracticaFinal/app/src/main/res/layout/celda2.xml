<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background">


    <ImageView
        android:id="@+id/portada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/estreno"
        app:layout_constraintStart_toEndOf="@id/portada"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/estreno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/duracion"
        app:layout_constraintStart_toEndOf="@id/portada"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="52dp" />

    <TextView
        android:id="@+id/duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/sala"
        app:layout_constraintStart_toEndOf="@id/portada"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="75dp" />

    <ImageView
        android:id="@+id/clasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/portada"
        app:layout_constraintStart_toStartOf="@id/portada"
        app:layout_constraintTop_toBottomOf="@+id/portada"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@id/portada"
        app:layout_constraintStart_toEndOf="@id/portada"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="276dp" />
</androidx.constraintlayout.widget.ConstraintLayout>